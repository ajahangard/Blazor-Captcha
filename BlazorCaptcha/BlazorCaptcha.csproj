<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Copyright>Copyright 2020-2022</Copyright>
		<PackageProjectUrl>https://github.com/tossnet/Blazor-Captcha</PackageProjectUrl>
		<RepositoryUrl>https://github.com/tossnet/Blazor-Captcha</RepositoryUrl>
		<PackageTags>Blazor, captcha</PackageTags>
		<Authors>Christophe Peugnet</Authors>
		<Company>Christophe Peugnet</Company>
		<Description>Generates a captcha image for a Blazor Server application</Description>
		<PackageReleaseNotes>add package Nugets SkiaSharp.NativeAssets.Linux</PackageReleaseNotes>
		<PackageIcon>icon.png</PackageIcon>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Version>1.2.3</Version>
		<AssemblyVersion>1.2.0.1</AssemblyVersion>
		<FileVersion>1.2.0.1</FileVersion>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
	</PropertyGroup>


  <ItemGroup>
	<None Include="LICENSE.txt">
		<Pack>True</Pack>
		<PackagePath></PackagePath>
	</None>
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="6.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.3" />
    <PackageReference Include="SkiaSharp" Version="2.88.0-preview.209" />
    <PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="2.88.0-preview.209" />
    <PackageReference Include="SkiaSharp.NativeAssets.WebAssembly" Version="2.88.0-preview.209" />
  </ItemGroup>


  <ItemGroup>
    <Resource Include="wwwroot\refresh.svg" />
  </ItemGroup>

</Project>
